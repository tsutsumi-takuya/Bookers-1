<div class="container" align="center">

	<div class="color">
		<% if flash[:notice] %>
			<p><%= flash[:notice] %></p>
		<% end %>
	</div>

	<h1>Books All</h1>
	<table class="table" align="center">
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
			</tr>
		</thead>

		<tbody>
			<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td>
					<%= link_to 'Show', book_path(book.id) %> /
					<%= link_to 'Edit', edit_book_path(book.id) %> /
					<%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ"%>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>

	<%= render 'books/newbook', book: @book %>

</div>